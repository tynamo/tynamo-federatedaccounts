<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<t:if test="configured">
		<a id="fbauthenticationlink" style="padding-top:0px;padding-left:0px;padding-right:0px;height:auto" href="#" onclick="openFacebookAuthorizationWindow('https://graph.facebook.com/oauth/authorize?client_id&#61;${oauthClientId}&amp;redirect_uri&#61;${oauthRedirectLink}&amp;scope&#61;${facebookPermissions}');" class="fb_button fb_button_medium">  <span id="fb_login_text" class="fb_button_text">Login</span> </a> 
		<p:else>
			<div style="padding-top:0px;padding-left:0px;padding-right:0px;height:auto" class="fb_button fb_button_medium"><span id="fb_login_text" class="fb_button_text" style="color:red;font-weight:bold">FB client not configured</span> </div> 
		</p:else>
	</t:if>
</t:container>